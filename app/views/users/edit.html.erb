<% if @user == current_user %>
  <div class="auth-container shadow round">
    <h2>Edit Profile</h2>
    <%= simple_form_for @user do |f| %>
      <div class="form-inputs">
        <%= f.input :first_name,
        required: false %>
        <%= f.input :last_name,
        required: false %>
        <%= f.input :email,
        required: false %>
        <%= f.input :photo,
        required: false %>
        <%= f.input :photo_cache, as: :hidden %>
      </div>
      <div class="form-actions">
        <%= f.button :submit %>
      </div>
    <% end %>
  </div>
<% else%>
  <h2>Access denied</h2>
<% end %>
