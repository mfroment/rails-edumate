<% if @lesson.user == current_user %>
  <%= simple_form_for @lesson do |f| %>
    <%= f.input :title, label: 'Lesson title' %>
    <%= f.input :topic, label: 'Topic' %>
    <%= f.input :location, label: 'Location' %>
    <%= f.input :price, label: 'Price' %>
    <%= f.input :time, as: :string, required: false, input_html: {class: "datepicker"} %>
    <%= f.input :description, label: 'Description' %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
    <%= f.button :submit %>
  <% end %>
<% else%>
  <h2>Access denied</h2>
<% end %>
