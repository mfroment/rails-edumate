<%= simple_form_for [@user, @lesson] do |f| %>
  <%= f.input :title, label: 'Lesson title' %>
  <%= f.input :topic, label: 'Topic' %>
  <%= f.input :location, label: 'Location' %>
  <%= f.input :description, label: 'Description' %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>
  <%= f.input :time, as: :string, required: false, input_html: {class: "datepicker"} %>
  <%= f.button :submit %>
<% end %>
