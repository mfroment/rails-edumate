<div class="auth-container shadow round">
  <h2>New Lesson</h2>
  <%= simple_form_for [@user, @lesson] do |f| %>
    <div class="form-inputs">
      <%= f.input :title,
      required: false,
      input_html: { autocomplete: "title" } %>
      <%= f.input :topic,
      required: false,
      input_html: { autocomplete: "topic" } %>
      <%= f.input :location,
      required: false,
      input_html: { autocomplete: "location" } %>
      <%= f.input :description,
      required: false %>
      <%= f.input :photo,
      input_html: { class: 'btn' },
      required: false %>
      <%= f.input :photo_cache, as: :hidden %>
      <%= f.input :time, as: :string, required: false, input_html: {class: "datepicker"} %>
    </div>
    <div class="form-actions">
      <%= f.button :submit %>
    </div>
  <% end %>
</div>
