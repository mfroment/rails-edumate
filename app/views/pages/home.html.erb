<div class="banner">
  <div class="container">
    <div class="banner-content">
      <h1>Welcome to Edumate</h1>
      <h3 class="text-white">Learn what you love</h3>
      <p>Explore hundreds of lessons today.</p>
      <div class="home-search">
        <%= form_tag lessons_path, method: :get do %>
          <%= text_field_tag :query,
            params[:query],
            class: "search-bar" %>
          <%= button_tag type: "submit", class: "submit-button" do  %>
            <i class="fas fa-search"></i>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
